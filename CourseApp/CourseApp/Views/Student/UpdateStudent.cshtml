@model Student
<form method="post" asp-controller="Student" asp-action="UpdateStudent">
    <div class="card col-5 mx-auto">
        <div class="card-header">
            Update Student
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label hidden asp-for="@Model.StudentId" class="form-label"></label>
                <input hidden asp-for="@Model.StudentId" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label"></label>
                <input asp-for="@Model.FirstName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label"></label>
                <input asp-for="@Model.LastName" class="form-control">
            </div>
            <div class="col-3 mb-3">
                <label asp-for="@Model.BirthDate" class="form-label"></label>
                <input type="date" asp-for="@Model.BirthDate" class="form-control">
            </div>
            <div class="mb-3">
                @foreach (var item in ViewBag.Courses as List<Course>)
                {
                    <div class="form-check">
                        <input class="form-check-input" id="course_@item.CourseId" type="checkbox" name="courseIds" value="@item.CourseId" @(Model.Courses.Any(i => i.CourseId == item.CourseId) ? "checked" : "") />
                        <label class="form-check-label" for="course_@item.CourseId">
                            @item.CourseName
                        </label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>