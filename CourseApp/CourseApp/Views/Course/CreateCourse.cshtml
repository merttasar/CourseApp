@model CourseCreateViewModel

<form method="post" asp-controller="Course" asp-action="CreateCourse">

    <div class="card col-5 mx-auto">
        <div class="card-header">
            Create Course
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="@Model.CourseName" class="form-label"></label>
                <input asp-for="@Model.CourseName" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary ">Create</button>
        </div>
    </div>

</form>