@model List<Course>

<a asp-controller="Course" asp-action="CreateCourse">
    <button type="submit" class="btn btn-warning mb-2">
        Create Course</button></a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <div class="bg-primary text-center  text-white fs-3 pb-1">Not have course.</div>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td style="width:200px">
                        <a asp-controller="Course" asp-action="UpdateCourse" asp-route-id="@item.CourseId" class="btn btn-primary inline-block">Update</a>
                        <a asp-controller="Course" asp-action="RemoveCourse" asp-route-id="@item.CourseId" class="btn btn-danger inline-block ms-2">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>