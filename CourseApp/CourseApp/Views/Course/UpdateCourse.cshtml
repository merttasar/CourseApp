@model Course

<form method="post" asp-controller="Course" asp-action="UpdateCourse" >
    <div class="card col-5 mx-auto">
        <div class="card-header">
            Update Course
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label hidden asp-for="@Model.CourseId"  class="form-label"></label>
                <input hidden asp-for="@Model.CourseId" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CourseName" class="form-label"></label>
                <input asp-for="@Model.CourseName" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary ">Update</button>
        </div>
    </div>
</form>